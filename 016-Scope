[in]  sayi=100
      def bolme(num)
          sayı=10
          return sayı/num      #sayi fonksiyon içinde 10 olarak tanımlanır ancak sayi fonksiyon dışında 100'dür
      bolme(2)
[out] 5 
[in]  bolme(5)
[out] 2
[in]  print(sayi)
[out] 100 
